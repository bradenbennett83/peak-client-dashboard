# Peak Client Dashboard - Environment Variables
# Copy this file to .env.local and fill in your values
# For Vercel deployment, add these in Project Settings â†’ Environment Variables

# ===========================================
# REQUIRED - App will not start without these
# ===========================================

# Supabase (https://supabase.com/dashboard/project/_/settings/api)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Stripe (https://dashboard.stripe.com/apikeys)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ===========================================
# OPTIONAL - Features will be limited without these
# ===========================================

# App URL (defaults to http://localhost:3000 in development)
NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Sentry Error Tracking (https://sentry.io)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=

# Salesforce Integration (for cases/invoices)
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_USERNAME=
SALESFORCE_PASSWORD=
SALESFORCE_SECURITY_TOKEN=
SALESFORCE_LOGIN_URL=https://login.salesforce.com

# UPS Shipping Integration
UPS_CLIENT_ID=
UPS_CLIENT_SECRET=
UPS_ACCOUNT_NUMBER=
